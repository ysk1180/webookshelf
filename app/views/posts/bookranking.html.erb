<div class='bookranking-title'>
  本棚に多く入れられた本トップ20
</div>
<div class='info'><i class="fa fa-info-circle fa-fw"></i>本はamazonへのリンクになっています</div>

<% @books.each.with_index(1) do |book, index| %>
  <%= link_to book['url'] do %>
    <div>
      第<%= index %>位/本棚へ入れられた回数 <%= book['count'] %>回
    </div>
    <div class='item-img'>
      <%= image_tag book['image'], width: '55px' %>
    </div>
    <div class='item-title'>
      <%= book['title'] %>
    </div>
  <% end %>
<% end %>
